{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",  // تعديل هنا إلى "node"
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "esModuleInterop": true,  // إضافة هذا الخيار
    "resolveJsonModule": true, // إضافة هذا الخيار

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"]  // تعديل هنا ليشمل كل ملفات .ts في src
}
